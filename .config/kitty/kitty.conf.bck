# General Settings
font_family FiraCode Nerd Font
font_size 16.0
bold_font auto
italic_font auto
bold_italic_font auto

allow_remote_control yes

# Window and Padding
# background_image /home/alice/.dotfiles/.config/kitty/4.png
background_opacity 0.7
# background_tint 0.9
background_image_layout cscaled

foreground #E5E9F0
background #000000
selection_foreground #3B4252

map backspace send_text all \x7f
map enter send_text all \x0d
# Cursor
cursor_shape beam
cursor_blink true
cursor_color #FFCC00

# Tabs and Title Bar
active_tab_foreground   #ECEFF4
active_tab_background   #5E81AC
inactive_tab_foreground #D8DEE9
inactive_tab_background #4C566A
tab_bar_margin_height   5
tab_bar_margin_width    10

# Keybindings
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard
map ctrl+shift+t new_tab
map ctrl+shift+w close_tab
map ctrl+shift+n no_op
map ctrl+shift+equals change_font_size all +1.0
map ctrl+minus change_font_size all -1.0
map ctrl+0     change_font_size all 0
# Scrollback
scrollback_lines 10000
